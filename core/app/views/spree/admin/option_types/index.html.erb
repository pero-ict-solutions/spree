<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_ot_link">
      <%= button_link_to t(:new_option_type), new_admin_option_type_url, { :remote => true, :icon => 'add', :id => 'new_option_type_link' } %>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1><%= t(:option_types) %></h1>

<div id="new_option_type"></div>

<table class="index sortable" id="listing_option_types" data-hook data-sortable-link="<%= update_positions_admin_option_types_url %>">
  <tr data-hook="option_header">
    <th><%= t(:name) %></th>
    <th><%= t(:presentation) %></th>
    <th></th>
  </tr>
  <tbody>
  <% @collection.each do |option_type| %>
    <tr class="spree_option_type" id="<%= spree_dom_id option_type %>" data-hook="option_row">
      <td><span class="handle"></span> <%= option_type.name %></td>
      <td class="presentation"><%= option_type.presentation %></td>
      <td class="actions">
        <%= link_to_edit(option_type, :class => 'admin_edit_option_type') %>
        &nbsp;
        <%= link_to_delete(option_type) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @collection %>

<% content_for :sidebar do %>
<div data-hook="admin_option_types_sidebar">
  <%= search_form_for [:admin, @search] do |f| %>
  <div class="box">
    <h3><%= t(:search) %></h3>
    <%- locals = {:f => f} %>
    <div data-hook="admin_option_types_index_search">
      <p>
        <%= f.label :name_cont, t(:name) %><br />
        <%= f.text_field :name_cont, :size => 15 %>
      </p>
    </div>

    <div data-hook="admin_option_types_index_search_buttons">
      <p class="form-buttons">
        <%= button t(:search) %>
      </p>
    </div>
  </div>
  <% end %>
</div>
<% end %>
